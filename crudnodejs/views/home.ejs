<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>CRUD</title>
    <link rel="stylesheet" href="/css/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
    <div class="site">
        
        <br>
        <br>
        <br>
        <div class="ui container">
            <div class="card">
                <div class="card-header text-white bg-info">
                    Student Crud
                </div>
                <div class="card-body">
            <form id="form" action="/add" class="ui form" method="POST">
                <div class="three fields">
                    <div class="field">
                        <label for="label" >Student name</label>
                        <input type="text" name="name"  value=""  id="name">
                    </div>
                    <div class="field">
                        <label for="label" >Address</label>
                        <input type="text" name="address"  value="" id="players">
                    </div>
                    <div class="field">
                        <label for="label" >Email</label>
                        <input type="text" name="email"  value="" id="coach">
                    </div>
                </div>
                <!-- <div class=" one fields"> -->
                    <div class="field fluid">
                        <button type="submit" class="btn btn-info btn-block my-4">Save</button>
                    </div>
                <!-- </div> -->
                </div>
                </div>
            </form>
            <br>
            <br>
            <br>
            
            <table class="ui table blue" >
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th >Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% student.forEach((studs)=>{%>
                        <tr>
                            <td id="Name"><%- studs.name %></td>
                            <td id="Address"><%- studs.address %></td>
                            <td id="Email"><%- studs.email %></td>
                            <td><a class="btn btn-info btn-block my-4" href="/edit/<%= studs._id %>"><i class="edit white icon"></i></a></td>
                            <td><a class="btn btn-info btn-block my-4" href="/<%= studs._id %>"><i id="delete" class="minus red icon"></i></a></td>
                        </tr>
                      <% }); %>
                </tbody>
            
                
            </table>
        </div>
    </div>
</body>

</html>